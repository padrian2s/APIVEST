<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scanare"
        android:id="@+id/button_scanare"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editQR"
        android:layout_alignBottom="@+id/button_scanare"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button_scanare" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/button_scanare"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rating Intepaturi "
        android:id="@+id/textView"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificat OK"
        android:id="@+id/button_verificare_ok"
        android:layout_marginTop="17dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De Reparat"
        android:id="@+id/button_verificare_reparare"
        android:layout_above="@+id/editText"
        android:layout_toStartOf="@+id/button_verificare_vopsire" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vopsit"
        android:id="@+id/button_verificare_vopsire"
        android:layout_above="@+id/editText"
        android:layout_alignEnd="@+id/editQR" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locatie 1"
        android:id="@+id/button4"
        android:layout_below="@+id/switch1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_alignStart="@+id/editQR"
        android:layout_alignEnd="@+id/button_verificare_vopsire" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/button_verificare_ok"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:layout_alignEnd="@+id/editQR"
        android:text="COORDONATE GPS" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locatie 2"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_toEndOf="@+id/button_verificare_ok" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locatie 3"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_alignEnd="@+id/button_verificare_vopsire" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Locatia actuala"
        android:id="@+id/textView2"
        android:layout_below="@+id/button_verificare_ok"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planificare: schimba cu Locatia 2 in data de 1/2/2016"
        android:id="@+id/textView3"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISTORIC"
        android:id="@+id/button7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTA STUPI"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editQR" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALVARE"
        android:id="@+id/button_salvare"
        android:layout_alignTop="@+id/button8"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operational"
        android:id="@+id/switch1"
        android:checked="false"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />


</RelativeLayout>
